				{
					"name": "Create One-Time Credit Transaction",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_id\": 127,\n  \"amount\": 100.50,\n  \"type\": \"credit\",\n  \"schedule_at\": \"{{scheduleTime}}\",\n  \"recurring\": false,\n  \"description\": \"Test one-time credit via Postman\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/scheduled-transactions",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"scheduled-transactions"
							]
						}
					},
					"response": []
				},
